#!/bin/zsh

# Vim-like exit operation.
alias Q='exit'

# Quick commands access.
alias g='git'

alias md='mkdir -p'
alias rd=rmdir

alias pu='pushd'
alias po='popd'

# `tmux` operations for starting and attaching to a session.
alias '!'='tmux -q has-session && exec tmux attach-session -d || exec tmux new-session -s default -n default'

# Directory listing.
alias ll='ls -hal --color=tty'

# Basic directory operations.
alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'

# Super-User operation.
alias _='sudo'
