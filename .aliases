#!/bin/zsh

# Vim-like exit operation.
alias Q='exit'

# Quick commands access.
alias g='git'

# Open Vim tabs for each argument or the current working directory if none were given.
v() {
  if [ $# -gt 0 ]; then
    vim -p "$@"
  else
    vim .
  fi
}

# Directory listing.
alias ll='ls -hal --color=tty'

# Basic directory operations.
alias ..='cd ..'

# Super-User operation.
alias _='sudo'
