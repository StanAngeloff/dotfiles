#!/bin/zsh

# Vim-like exit operation.
alias Q='exit'

# Quick commands access.
alias g='git'

alias md='mkdir -p'
alias rd=rmdir

alias pu='pushd'
alias po='popd'

# `screen` operations for starting and attaching to a session.
alias '!'='screen -dR'
alias '?'='screen -ls'

# Directory listing.
alias ll='ls -hal --color=tty'

# Basic directory operations.
alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'

# Super-User operation.
alias _='sudo'
