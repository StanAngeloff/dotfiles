#!/bin/zsh

# Vim-like exit operation.
alias Q='exit'

# Quick commands access.
alias g='git'

# Open Vim tabs for each argument.
alias v='vim -p'

# Directory listing.
alias ll='ls -hal --color=tty'

# Basic directory operations.
alias ..='cd ..'

# Super-User operations.
alias _='sudo'

for __cmd in apt-get docker service start stop status restart; do
  eval "alias $__cmd='_ $__cmd'"
done ; unset __cmd
