#!/bin/zsh

# Vim-like exit operation.
alias Q='exit'

# Quick commands access.
alias g='git'

# Open Vim tabs for each argument.
alias v='vim -p'

# Directory listing.
alias ll='ls -hal --color=tty'

# Basic directory operations.
alias ..='cd ..'

# Super-User operation.
alias _='sudo'

alias docker='sudo docker'
alias apt-get='sudo apt-get'
