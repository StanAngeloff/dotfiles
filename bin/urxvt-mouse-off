#!/bin/bash

if [[ "$( pgrep -x "$( basename "$0" )" )" != $$ ]]; then
    echo "error: there is already an instance of $( basename "$0" ) running, aborting." 1>&2
    exit 1
fi
if [[ "$( pgrep -x unclutter )" ]]; then
    echo "error: there is already an instance of unclutter running, aborting." 1>&2
    exit 1
fi

is_off=0
refresh() {
    is_off=$( synclient -l | grep TouchpadOff | cut -d= -f2 | tr -d ' ' || echo -n 0 )
}
refresh

enable() {
    if [[ $is_off == 1 ]]; then
        is_off=0
        synclient TouchpadOff=0
    fi
}

disable() {
    if [[ $is_off == 0 ]]; then
        is_off=1
        synclient TouchpadOff=1
    fi
}

unclutter -idle 1 &
unclutter_pid=$!
trap "enable && kill \"${unclutter_pid}\"" EXIT

n=0
while [[ true ]]; do
    window="$( xdotool getwindowfocus )"

    if [[ -z "$window" ]]; then
        enable
    else
        if xprop -id "$window" | grep WM_CLASS | grep -q urxvt; then
            disable
        else
            enable
        fi
    fi

    sleep 0.1

    n=$((n+1))
    if [[ $n -ge 50 ]]; then
        refresh
        n=0
    fi
done
