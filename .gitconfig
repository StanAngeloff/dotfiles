[gui]
	fontui = -family \"Segoe UI\" -size 9 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Consolas -size 13 -weight normal -slant roman -underline 0 -overstrike 0
	commitmsgwidth = 78
	spellingdictionary = none
	encoding = utf-8
[user]
	name = Stan Angeloff
	email = <email>
[core]
	editor = vim
	autocrlf = false
	filemode = false
[branch]
	autosetuprebase = always
[color]
	branch = always
	diff = always
	grep = always
	interactive = always
	pager = true
	showbranch = always
	status = always
	ui = always
[github]
	user = StanAngeloff
	token = <token>
[diff]
	tool = kdiff3
[merge]
	tool = kdiff3
[alias]
    graph = !sh -c 'git log --graph --pretty=oneline --abbrev-commit --decorate --color | less -FRS'
